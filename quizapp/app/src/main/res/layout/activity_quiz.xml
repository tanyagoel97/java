<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/holo_red_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/ans1"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="192dp"
            android:layout_marginStart="62dp"
            android:background="#43ff40" />

        <Button
            android:id="@+id/ans2"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/ans1"
            android:layout_marginEnd="70dp"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/ans3"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/ans1"
            android:layout_marginBottom="96dp"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/ans4"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_alignEnd="@+id/ans2"
            android:layout_alignTop="@+id/ans3"
            android:background="#5dff40" />

        <TextView
            android:id="@+id/question"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="137dp"
            android:fontFamily="sans-serif-condensed"
            android:text="question"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="@android:color/background_dark"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/timer"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="58dp"
            android:fontFamily="cursive"
            android:text="tmer"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/score"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="58dp"
            android:fontFamily="cursive"
            android:text="score"
            android:textAlignment="viewStart"
            android:textColor="@android:color/background_dark"
            android:textSize="24sp" />

        <Button
            android:id="@+id/viewscore"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/question"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="16dp"
            android:text="view previous score"
            android:visibility="invisible" />

        <Button
            android:id="@+id/restart"
            android:layout_width="137dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/viewscore"
            android:layout_marginStart="46dp"
            android:text="RESTART"
            android:visibility="invisible" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>